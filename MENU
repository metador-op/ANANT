  .tabs button.active { background:#fff; border:1px solid #d22; color:#d22; }
  .grid { display: grid; grid-template-columns: repeat(auto-fit,minmax(220px,1fr)); gap:1rem; padding:1rem; }
  .card { background: #fff; border-radius: 10px; padding: 1rem; box-shadow: 0 2px 6px rgba(0,0,0,0.1);}
