<header>
  <h1>Our Menu</h1>
</header>

<div class="tabs" id="categoryTabs"></div>
<div class="grid" id="menuGrid"></div>

<button class="cart-btn" id="cartButton">ðŸ›’<span id="cartCount">0</span></button>

<div class="drawer" id="cartDrawer">
  <h2>Your Cart</h2>
  <ul id="cartList"></ul>
  <p><strong>Total:</strong> â‚¹<span id="cartTotal">0</span></p>
  <button id="closeCart">Close</button>
</div>

<script>
const categories = [
  { key:"appetizers", label:"Appetizers" },
  { key:"mains",      label:"Main Courses" },
  { key:"desserts",   label:"Desserts" },
  { key:"drinks",     label:"Beverages" }
];

const menuItems = [
  { id:1, name:"Bruschetta", category:"appetizers", price:120, available:true},
  { id:2, name:"tikka", category:"appetizers", price:220, available:true},
  { id:3, name:"Veg Burger", category:"mains", price:200, available:true },
  { id:4, name:"Chocolate Cake", category:"desserts", price:150, available:true },
  { id:5, name:"Iced Coffee", category:"drinks", price:90, available:true },
];

let activeCategory = categories[0].key;
let cart = [];

function renderCategories() {
  const tabs = document.getElementById("categoryTabs");
  tabs.innerHTML = "";
  categories.forEach(cat => {
    const btn = document.createElement("button");
    btn.textContent = cat.label;
    btn.className = cat.key === activeCategory ? "active" : "";
    btn.onclick = () => { activeCategory = cat.key; renderMenu(); renderCategories(); };
    tabs.appendChild(btn);
  });
}

function renderMenu() {
  const grid = document.getElementById("menuGrid");
  grid.innerHTML = "";
  menuItems
    .filter(item => item.category === activeCategory && item.available)
    .forEach(item => {
      const card = document.createElement("div");
      card.className = "card";
      card.innerHTML = `<h3>${item.name}</h3><p>â‚¹${item.price}</p>`;
      const addBtn = document.createElement("button");
      addBtn.textContent = "Add to Cart";
      addBtn.onclick = () => addToCart(item);
      card.appendChild(addBtn);
      grid.appendChild(card);
    });
}

function addToCart(item) {
  const existing = cart.find(c => c.id === item.id);
  if (existing) existing.qty += 1;
  else cart.push({ ...item, qty: 1 });
  updateCartUI();
}

function updateCartUI() {
  document.getElementById("cartCount").textContent =
    cart.reduce((s,i) => s + i.qty, 0);
  const list = document.getElementById("cartList");
  list.innerHTML = "";
  cart.forEach(item => {
    const li = document.createElement("li");
    li.textContent = `${item.name} x${item.qty} - â‚¹${item.price * item.qty}`;
    list.appendChild(li);
  });
  const total = cart.reduce((s,i) => s + i.qty * i.price, 0);
  document.getElementById("cartTotal").textContent = total;
}

document.getElementById("cartButton").onclick = () =>
  document.getElementById("cartDrawer").classList.add("open");
document.getElementById("closeCart").onclick = () =>
  document.getElementById("cartDrawer").classList.remove("open");

renderCategories();
renderMenu();
</script>
</body>
</html>

